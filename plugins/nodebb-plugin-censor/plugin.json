{
  	"id": "nodebb-plugin-censor",
  	"name": "Censor Plugin",
  	"description": "Automatically censors profanity in posts",
  	"version": "1.0.0",
  	"library": "./library.js",

  	"admin": {
    	"route": "/plugins/censor",
    	"icon": "fa-ban",
    	"name": "Censor"
  	},

  "hooks": [
    { "hook": "static:app.load", "method": "init" },
    { "hook": "filter:post.create", "method": "censorPost" },
    { "hook": "filter:post.edit", "method": "censorPost" },
    { "hook": "filter:parse.post", "method": "censorParsed" },
    { "hook": "filter:topic.create", "method": "censorTopic" },
    { "hook": "filter:topic.edit", "method": "censorTopic" },
    { "hook": "filter:parse.raw", "method": "parseRaw" },
    { "hook": "action:settings.set.nodebb-plugin-censor", "method": "onSettingsSet" }
  ]
}
