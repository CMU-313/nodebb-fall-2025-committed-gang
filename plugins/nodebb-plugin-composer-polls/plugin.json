{
	"id": "nodebb-plugin-composer-polls",
	"name": "Composer Poll Button",
	"description": "Adds a poll button to the composer toolbar for new topics.",
	"library": "./library.js",
	"hooks": [
		{ "hook": "filter:composer.formatting", "method": "addPollFormattingOption" },
		{ "hook": "filter:topic.post", "method": "handleTopicPost" },
		{ "hook": "action:topic.post", "method": "onTopicPost" },
		{ "hook": "filter:topics.addPostData", "method": "attachPollToPosts" },
		{ "hook": "filter:post.edit", "method": "handlePostEdit" },
		{ "hook": "action:post.edit", "method": "onPostEdit" },
		{ "hook": "action:posts.purge", "method": "onPostsPurge" },
		{ "hook": "action:topic.purge", "method": "onTopicPurge" },
		{ "hook": "action:post.move", "method": "onPostMove" },
		{ "hook": "action:topic.merge", "method": "onTopicMerge" }
	],
	"scripts": [
		"./static/lib/composer-polls.js",
		"./static/lib/topic-polls.js"
	],
	"languages": "./public/language",
	"templates": "./static/templates"
}
